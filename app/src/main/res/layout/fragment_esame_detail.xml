<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/esame_detail"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nome Esame"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_detail_fragment"
        android:id="@+id/exam_name_textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="NomeDocente"
        android:id="@+id/prof_name_textView"
        android:layout_below="@+id/exam_name_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Crediti: "
        android:textSize="@dimen/text_detail_fragment"
        android:id="@+id/crediti_textView"
        android:layout_below="@+id/prof_name_textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Da dare/dato"
        android:textSize="@dimen/text_detail_fragment"
        android:id="@+id/to_do_textView"
        android:layout_below="@+id/crediti_textView"
        android:layout_alignStart="@+id/crediti_textView"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="In data:"
        android:textSize="@dimen/text_detail_fragment"
        android:id="@+id/label_in_data"
        android:layout_below="@+id/to_do_textView"
        android:layout_alignStart="@+id/to_do_textView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/grade_textView"
        android:textSize="@dimen/text_detail_fragment"
        android:gravity="center"
        android:layout_marginTop="350dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/linear_buttons"
        android:layout_marginTop="440dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modifica"
            android:id="@+id/edit_exam_button"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elimina"
            android:id="@+id/button4"
            android:layout_toEndOf="@+id/edit_exam_button"
            android:layout_alignTop="@+id/delete_exam_button" />
    </LinearLayout>

</RelativeLayout>